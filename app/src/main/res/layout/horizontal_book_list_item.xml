<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="105dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/train_number_button_card_view"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="0dip"
    card_view:cardPreventCornerOverlap="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/abc_cab_background_top_material"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/horizontal_books_item_icon"
        android:contentDescription="@string/books_item_icon"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/horizontal_books_item_heading"
        android:textSize="@dimen/book_name_text_size"
        android:text="@string/test_string"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:lines="2"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />



</LinearLayout>


</android.support.v7.widget.CardView>