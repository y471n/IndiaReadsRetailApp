<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    tools:context="com.indiareads.retailapp.corporate.view.fragment.AddressBookAddAddressFragmentCorporate">

    <ScrollView
        android:id="@+id/home_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/proceed_button"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:isScrollContainer="false"
        >

        <!--all edit text linear layout  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >


            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/edit_text_padding"
                    android:hint="@string/full_name_hint"/>

            </android.support.design.widget.TextInputLayout>

            <!--address line 1 text input layout  -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/address_line_one_text_input_layout"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/address_line_1"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:layout_height="45dp"
                    android:paddingLeft="@dimen/edit_text_padding"
                    android:hint="@string/address_line_1_hint"/>

            </android.support.design.widget.TextInputLayout>

            <!--address line 2 text input layout  -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/address_line_2"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:layout_height="45dp"
                    android:paddingLeft="@dimen/edit_text_padding"
                    android:hint="@string/address_line_2_hint"/>


            </android.support.design.widget.TextInputLayout>


            <!--city text input layout  -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:layout_height="45dp"
                    android:paddingLeft="@dimen/edit_text_padding"
                    android:hint="@string/city_hint"/>

            </android.support.design.widget.TextInputLayout>

            <!--state text input layout  -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:layout_height="45dp"
                    android:paddingLeft="@dimen/edit_text_padding"
                    android:hint="@string/state_hint"/>

            </android.support.design.widget.TextInputLayout>

            <!--pincode text input layout  -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/pincode_text_input_layout"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/pincode"
                    android:layout_width="200dp"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:layout_height="45dp"
                    android:paddingLeft="@dimen/edit_text_padding"
                    android:inputType="number"
                    android:hint="@string/pincode_hint"/>

            </android.support.design.widget.TextInputLayout>


            <!--Relative layout to put +91 button on edit text  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <!--mobile text input layout  -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobile_number_text_input_layout">

                    <EditText
                        android:id="@+id/mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:inputType="number"
                        android:paddingLeft="55dp"
                        android:hint="@string/mobile_number_hint"/>

                </android.support.design.widget.TextInputLayout>


                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@color/button_transparent_color"
                    android:text="@string/mobile_number_hint2"
                    android:layout_marginLeft="10dp"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />



            </RelativeLayout>



        </LinearLayout>


    </ScrollView>

    <!-- proceed to paymentMethod button  -->


    <Button
        android:id="@+id/proceed_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:textColorHint="@color/whiteColor"
        android:fontFamily="trebuchet ms"
        android:background="#e73517"
        android:hint="@string/save_button_dummy_text"
        android:textSize="@dimen/common_full_screen_button_text_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        />


</RelativeLayout>
