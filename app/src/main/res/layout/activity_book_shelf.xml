<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.indiareads.retailapp.views.activities.BookShelfActivity"
    android:background="@color/whiteColor">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/book_shelf_complete_layout"
   >


    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        android:orientation="vertical"
        >

        <com.indiareads.retailapp.slidingtab.SlidingTabLayout
            android:id="@+id/sliding_tab_bookshelf_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_bar"
            android:elevation="2dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_bookshelf_activity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>


    </LinearLayout>