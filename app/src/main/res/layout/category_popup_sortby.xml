<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:background="@color/whiteColor"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="@string/sort_by_tag"/>

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/popularity_linear_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/popularity"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_marginLeft="90dp"
            android:layout_height="18dp"
            android:tag="@string/unchecked"
            android:id="@+id/popularity_image_view"
            android:background="@drawable/unchecked"/>
          </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/price_linear_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/mrp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_marginLeft="90dp"
            android:layout_height="18dp"
            android:tag="@string/unchecked"
            android:id="@+id/price_image_view"
            android:background="@drawable/unchecked"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
