<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    tools:context="com.indiareads.retailapp.corporate.view.fragment.ReturnSummaryFragmentCorporate">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="center">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:gravity="center"
              android:textSize="22sp"
              android:text="@string/return_request_received" />


          <Button
              android:id="@+id/return_summary_button"
              android:layout_width="200dp"
              android:layout_height="40dp"
              android:textColorHint="@color/whiteColor"
              android:fontFamily="trebuchet ms"
              android:background="@drawable/button_background"
              android:hint="@string/continue_shopping_button_text"
              android:textSize="17sp"
              android:layout_marginTop="20dp"
              android:textStyle="bold"
              />

      </LinearLayout>


</RelativeLayout>

